@model IEnumerable<VillaNueva_Habitat.Models.Cat_Tipo_Documento>

@{
    ViewBag.Title = "Index";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Error : </strong> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span>&times;</span>
        </button>
    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success ! </strong> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span>&times;</span>
        </button>
    </div>
}

else if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-Info">
        <strong>Info ! </strong> @TempData["InfoMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span>&times;</span>
        </button>
    </div>
}

<h2>Catálogo Tipo Documento</h2>

<p>
    <a class="btn btn-primary mb-3" href="@Url.Action("Create","Cat_Tipo_Documento")">Crear Documento</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_Tipo_Documento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Tipo_Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Tipo_Documento }, new { @class = "btn btn-primary" }) &nbsp;&nbsp;&nbsp;
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Tipo_Documento }, new { @class = "btn btn-success" }) &nbsp;&nbsp;&nbsp;
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Tipo_Documento }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
