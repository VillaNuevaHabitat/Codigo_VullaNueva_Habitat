@model IEnumerable<VillaNueva_Habitat.Models.cat_area_contacto>
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<div class="card">
    <div class="card-header">
        Crear Nuevo Registro
    </div>
    <div class="card-body">


        <form asp-action="Create" asp-controller="cat_area_contactoController" method="post">
            <div class="mb-3">
                <label class="form-label">id</label>
                <input asp-for="id" type="text" class="form-control">
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Descripcion</label>
                <input asp-for="Descripcion" type="text" class="form-control">
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" asp-controller="cat_area_contactoController" class="btn btn-warning">Volver a la lista</a>
        </form>


    </div>
</div>