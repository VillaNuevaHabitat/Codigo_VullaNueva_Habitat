@model IEnumerable<VillaNueva_Habitat.Models.Cat_Sub_Proceso_Cat>

@{
    ViewBag.Title = "Index";
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Información : </strong> @TempData["InfoMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span>&times;</span>
        </button>
    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success ! </strong> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span>&times;</span>
        </button>
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Error : </strong> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span>&times;</span>
        </button>
    </div>
}

<h2>Subproceso de Catálogos</h2>

<p>
    <a class="btn btn-primary mb-3" href="@Url.Action("Create","Cat_Sub_Proceso_Cat")">Crear Nuevo Sub Proceso</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdSubProceso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clave)
        </th>
        <th>Acción</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdSubProceso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clave)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdSubProceso }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Detalles", "Details", new { id = item.IdSubProceso }, new { @class = "btn btn-success" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdSubProceso }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
